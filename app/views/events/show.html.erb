<div class="panel panel-primary">
  <div class="panel-heading">
    <h4><%= @event.name %></h4>
  </div>

  <div class="panel-body">
    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>
    <p>Location: <%= @event.location %></p>
    <p>Host: <%= @event.user.email %></p>
    <p>Price: <%= @event.price %></p>
    <p>Capacity: <%= @event.capacity %> <%= @event.capacity > 1 ? "guests" : "guest" %></p>
    <p>Date: <%= @event.starts_at %></p>

    <!-- Amenities -->
    <h4>Amenities</h4>
    <ul class="amenities">
      <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
      <li><%= !@event.includes_drinks ? ("<del>Drinks</del>").html_safe : "Drinks" %></li>
    </ul>

    <!-- Categories -->
    <h4>Categories</h4>
    <% @categories.each do |category| %>
      <span class="label label-success"><%= category.name %></span>
    <% end %>

    <!-- Status -->
    <h4>Status</h4>
    <p><%= !@event.active ? ("<del>Unpiublished</del>").html_safe : "Published" %></p>
   </div>

 </div>

 <%= link_to "Back", events_path, class: "btn btn-default" %>
